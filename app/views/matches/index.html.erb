<h1>Match History</h1>

<table>
  <tr>
    <th>Winner</th>
    <th>Score</th>
    <th>Loser</th>
    <th>Date</th>
  </tr>

  <% @matches.each do |match| %>
    <tr>
      <td><%= match.winner.name %></td>
      <td><%= match.winner_score %> - <%= match.loser_score %></td>
      <td><%= match.loser.name %></td>
      <td><%= match.created_at.strftime("%d %b %Y") %></td>
    </tr>
  <% end %>
</table>

