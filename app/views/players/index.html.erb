<h1>Players</h1>
<%= link_to "Add Player", new_player_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Action</th>
  </tr>

  <% @players.each do |player| %>
    <tr>
      <td><%= player.name %></td>
      <td><%= player.email %></td>
      <td>
        <%= link_to "Delete",
                    player_path(player),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
      </td>
    </tr>
  <% end %>
</table>

